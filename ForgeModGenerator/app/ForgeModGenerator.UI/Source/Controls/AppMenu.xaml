<UserControl x:Class="ForgeModGenerator.UI.Controls.AppMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ForgeModGenerator.UI.Controls"
			 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
			 mc:Ignorable="d" 
             d:DesignHeight="15" d:DesignWidth="155">
	<Grid>
		<StackPanel Orientation="Horizontal">
			<Button Width="35" Height="15" Background="#FFCD2929" Click="OpenSettings" Margin="0,0,5,0" BorderBrush="#FF3C0000">
				<materialDesign:PackIcon Kind="Settings" Margin="-7"/>
			</Button>
			<Button Width="35" Height="15" Background="#FFCD2929" Click="Minimize" Margin="0,0,5,0" BorderBrush="#FF3C0000">
				<materialDesign:PackIcon Kind="WindowMinimize" Margin="-7, -3"/>
			</Button>
			<Button Width="35" Height="15" Background="#FFCD2929" Click="Restore" Margin="0,0,5,0" BorderBrush="#FF3C0000">
				<materialDesign:PackIcon Kind="WindowMaximize" Margin="-7"/>
			</Button>
			<Button Width="35" Height="15" Background="#FFCD2929" Click="ExitApp" BorderBrush="#FF3C0000">
				<materialDesign:PackIcon Kind="Close" Margin="-7"/>
			</Button>
		</StackPanel>
	</Grid>
</UserControl>
