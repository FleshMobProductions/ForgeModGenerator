<Page x:Class="ForgeModGenerator.ViewModel.TextureGeneratorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ForgeModGenerator.ViewModel"
      xmlns:control="clr-namespace:ForgeModGenerator.UserControls"
      mc:Ignorable="d"
	  d:DesignHeight="450" d:DesignWidth="800"
	  local:ViewModelLocator.GetDataContext="ForgeModGenerator.ViewModel.TextureGeneratorViewModel">

	<Page.Resources>
		<DataTemplate x:Key="ItemTemplate">
			<StackPanel>
				<Image Tag="{Binding ElementName=ThisWindow}"
					   ContextMenu="{StaticResource DefaultRemoveFileContext}"
					   Width="32" Height="32">
					<Image.Source>
						<BitmapImage UriSource="{Binding}"
									 CacheOption="OnLoad"/>
					</Image.Source>
				</Image>
				<TextBlock Text="{Binding Converter={StaticResource PathToNameConverter}}"/>
			</StackPanel>
		</DataTemplate>
	</Page.Resources>

	<Grid Background="{StaticResource PageBackground}">
		<control:FileCollectionListBox FilesSource="{Binding Files}"
									   SelectedFilesItem="{Binding SelectedFiles}"
									   FileItemTemplate="{StaticResource ItemTemplate}"
									   AddCommand="{Binding AddCommand}"
									   RemoveCommand="{Binding RemoveCommand}"
									   EmptyMessageVisibility="{Binding EmptyMessageVisibility}"/>
	</Grid>
</Page>
